<div class="w-75">
  <%= simple_form_for [playlist, playlist_song] do |f| %>
    <div class="modal-body rounded-pill">
      <%= f.label "Songs", class: "mb-0 mt-0 label-box" %>
      <%= f.association :song, collection: Song.all.order(:name), class: "label-box", prompt: "Select a song", label: false, input_html: { data: { controller: "tom-select" } } %>
    </div>
    <div class="modal-footer clear-btn justify-content-center">
      <%= f.submit "Add song", class: "btn white" %>
    </div>
  <% end %>
</div>

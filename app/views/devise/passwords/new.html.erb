<div class="w-100 h-100 d-inline-flex flex-column justify-content-center align-items-center">
  <div class="glass-container">
    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= f.error_notification %>
      <div class="container pt-5">
        <div class="row justify-content-center">
              <h1 class="text-center mb-5">Password Reset</h1>
          <div class="w-50 col-md-6 col-lg-4">
            <form class="row">

              <div class="col-12 mb-4">
                <%= f.label :email, class: "form-label label-box"%>
                <%= f.text_field :email,
                        required: false,
                        autofocus: true,
                        input_html: { autocomplete: "email" },
                        class: "form-control text-box white"%>
              </div>

              <div class="form-actions btn mb-5 clear-btn">
                <%= f.button :submit, "Reset password", class: "btn white"%>
              </div>

              <div class="d-flex justify-content-between">
                <div class="form-actions btn bgd-btn">
                  <%= link_to "Log in", new_user_session_path, class: "btn white"%>
                </div>

                <div class="form-actions btn bgd-btn">
                  <%= link_to "Sign up", new_user_registration_path, class: "btn white"%>
                </div>

              </div>

            </form>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
